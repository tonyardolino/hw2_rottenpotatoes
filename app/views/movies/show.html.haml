-# in app/views/movies/show.html.haml

%h2 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description
%p#description= @movie.description
%h3 Director
%p#director= @movie.director

= link_to 'Edit', edit_movie_path(@movie)
= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to movie list', movies_path
%p= button_to 'Find Movies With Same Director', movies_similar_movie_path(:id => @movie.id)
%p= link_to 'Add Review', new_movie_review_path(@movie) 
